{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "id": "http://schema.librame.net/v4.20.1808",
    "title": "JSON schema for the LibrameStandard Librame.json files.",
    "type": "object",

    "definitions": {
        // Extensions
        "Algorithm": {
            "type": "object",
            "allOf": [ { "$ref": "#/definitions/AlgorithmContent" } ]
        },
        "Drawing": {
            "type": "object",
            "allOf": [ { "$ref": "#/definitions/DrawingContent" } ]
        },
        "Entity": {
            "type": "object",
            "allOf": [ { "$ref": "#/definitions/EntityContent" } ]
        },
        "Network": {
            "type": "object",
            "allOf": [ { "$ref": "#/definitions/NetworkContent" } ]
        },
        "Platform": {
            "type": "object",
            "allOf": [ { "$ref": "#/definitions/PlatformContent" } ]
        },

        // Algorithm Extension
        "AlgorithmContent": {
            "properties": {
                "Encoding": {
                    "type": "string",
                    "description": "Set text encoding.",
                    "default": "utf-8"
                },
                "Identifier": {
                    "type": "string",
                    "description": "Set algorithm identifier.",
                    "default": "ED191ADBBF263E49B0E396B782DB0D59"
                },

                "Asymmetry": {
                    "type": "object",
                    "description": "Set asymmetry algorithm.",
                    "allOf": [ { "$ref": "#/definitions/AlgorithmAsymmetryContent" } ]
                },
                "Endec": {
                    "type": "object",
                    "description": "Set text endec.",
                    "allOf": [ { "$ref": "#/definitions/AlgorithmEndecContent" } ]
                },
                "Hash": {
                    "type": "object",
                    "description": "Set asymmetry algorithm.",
                    "allOf": [ { "$ref": "#/definitions/AlgorithmHashContent" } ]
                },
                "Symmetry": {
                    "type": "object",
                    "description": "Set asymmetry algorithm.",
                    "allOf": [ { "$ref": "#/definitions/AlgorithmSymmetryContent" } ]
                }
            }
        },
        "AlgorithmAsymmetryContent": {
            "properties": {
                "RsaKeyGenerator": {
                    "type": "string",
                    "description": "Set rsa key generator scenario name.",
                    "enum": [ "JsonFileRsaKeyGenerator", "XmlFileRsaKeyGenerator", "PemFileRsaKeyGenerator" ],
                    "default": "JsonFileRsaKeyGenerator"
                },
                "RsaKeySource": {
                    "type": "object",
                    "description": "Set FileSource.",
                    "allOf": [ { "$ref": "#/definitions/FileSourceContent" } ],
                    "required": [ "FileName" ]
                }
            }
        },
        "AlgorithmEndecContent": {
            "properties": {
                "Cipher": {
                    "type": "string",
                    "description": "Set cipher text endec scenario name.",
                    "enum": [ "Base32CipherTextEndec", "Base64CipherTextEndec", "HexCipherTextEndec" ],
                    "default": "Base64CipherTextEndec"
                },
                "Plain": {
                    "type": "string",
                    "description": "Set plain text endec scenario name.",
                    "enum": [ "EncodingPlainTextEndec" ],
                    "default": "EncodingPlainTextEndec"
                }
            }
        },
        "AlgorithmHashContent": {
            "properties": {
                "HmacHashKeyGenerator": {
                    "type": "string",
                    "description": "Set hmac hash key generator scenario name.",
                    "enum": [ "IdentifierHmacHashKeyGenerator", "RngHmacHashKeyGenerator" ],
                    "default": "IdentifierHmacHashKeyGenerator"
                },
                "HmacMd5Key": {
                    "type": "string",
                    "description": "Set hmac md5 key string."
                },
                "HmacSha1Key": {
                    "type": "string",
                    "description": "Set hmac sha1 key string."
                },
                "HmacSha256Key": {
                    "type": "string",
                    "description": "Set hmac sha256 key string."
                },
                "HmacSha384Key": {
                    "type": "string",
                    "description": "Set hmac sha384 key string."
                },
                "HmacSha512Key": {
                    "type": "string",
                    "description": "Set hmac sha512 key string."
                }
            }
        },
        "AlgorithmSymmetryContent": {
            "properties": {
                "KeyGenerator": {
                    "type": "string",
                    "description": "Set symmetry key generator scenario name.",
                    "enum": [ "IdentifierSymmetryKeyGenerator", "RngSymmetryKeyGenerator" ],
                    "default": "IdentifierSymmetryKeyGenerator"
                },
                "AesKey": {
                    "type": "string",
                    "description": "Set aes key string."
                },
                "DesKey": {
                    "type": "string",
                    "description": "Set des key string."
                },
                "TripleDesKey": {
                    "type": "string",
                    "description": "Set triple des key string."
                }
            }
        },

        // Drawing Extension
        "DrawingContent": {
            "properties": {
                "ImageExtensions": {
                    "type": "string",
                    "description": "Set image file extensions.",
                    "default": ".jpg,.jpeg,.png,.bmp"
                },
                "Captcha": {
                    "type": "object",
                    "allOf": [ { "$ref": "#/definitions/CaptchaContent" } ]
                }
            }
        },

        // Commons
        "FileSourceContent": {
            "properties": {
                "FileName": {
                    "type": "string",
                    "description": "Set fileName (without path)."
                },
                "BasePath": {
                    "type": "string",
                    "description": "Set basePath.",
                    "default": ""
                }
            }
        }
    }
}